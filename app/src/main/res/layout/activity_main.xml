<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maria.itplace_android01_hw3.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:src="@drawable/butterfly" />

        <Button
            android:id="@+id/change_text_button"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Change text" />

        <TextView
            android:id="@+id/our_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="30dp"
            android:text="@string/headline"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnSetColor1"
                android:layout_weight="2"
                style="@style/ButtonStyle"
                android:layout_width="10dp"
                android:layout_height="50dp"
                android:background="@color/colorWhite"
                android:text="@string/set_color_1" />

            <Button
                android:id="@+id/btnSetColor2"
                android:layout_weight="1"
                style="@style/ButtonStyle"
                android:layout_width="10dp"
                android:layout_height="50dp"
                android:background="@color/colorRed"
                android:text="@string/set_color_2" />

            <Button
                android:id="@+id/btnSetColor3"
                style="@style/ButtonStyle"
                android:layout_weight="1"
                android:background="@color/colorBlue"
                android:text="@string/set_color_3" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
